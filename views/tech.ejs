<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Polity Dance</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/swup@4"></script>
    <script defer>
        const swup = new Swup();
    </script>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <style>
        a.disabled {
            pointer-events: none;
            cursor: default;
        }
        
        * {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }
        
        /* Light Mode Styles */
        .light-mode {
            background-color: #ffffff;
            color: #000000;
        }

        /* Dark Mode Styles */
        .dark-mode {
            background-color: black;
            color: #ffffff;
        }

        /* Navbar Light Mode */
        .light-mode .navbar {
            background-color: #ffffff;
            color: #000000;
            border-bottom: 1px solid #ddd;
        }

        /* Navbar Dark Mode */
        .dark-mode .navbar {
            background-color: black;
            color: #ffffff;
            border-bottom: 1px solid rgb(130, 130, 130);
        }

        .peacockk {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: 1px solid #505050;
        }

        .peacockk:hover {
            transform: scale(1.01);
            box-shadow:2.5px 2.5px 0px 0px #505050;
        }
    </style>
</head>
<body class="dark-mode flex flex-col justify-center items-center">
    <div class="navbar flex justify-between items-center w-screen py-2">
        <a href="/" class="text-3xl font-bold ml-4">Polity-Dance</a>
        <nav class="flex gap-3">
            <a href="/views/politics/home.html" class="px-3 py-2 text-lg font-semibold hover:underline disabled">Politics</a>
            <a href="/views/sports/home.html" class="px-3 py-2 text-lg font-semibold hover:underline disabled">Sports</a>
            <a href="/tech" class="px-3 py-2 text-lg font-semibold hover:underline">Tech</a>
        </nav>
        <div class="btns flex items-center gap-4">
            <a href="/p/<%= user.username %>" class="flex items-center gap-2">
                <div class="w-10 h-10 overflow-hidden rounded-full border-2">
                    <img src="<%= user.profilepic %>" alt="<%= user.name %>" class="object-cover">
                </div>
                <h2 class="font-semibold"><%= user.name %></h2>
            </a>
            <button id="theme-toggle" class="mr-4 px-3 py-2 border rounded-full focus:outline-none">☀</button>
        </div>
    </div>

    <div class="grid-masonry max-w-screen-lg py-6 px-4 flex items-center gap-3">
        <% articles.forEach(article => { %>
            <a href="articles/<%= article.user.username %>/<%= article.title %>" class="flex flex-col items-center justify-center gap-2 peacockk rounded-lg p-4 bg-zinc-900">
                <img src="<%= article.articlePic %>" alt="<%= article.articlePic %>" class="rounded-lg">
                <h3 class="font-bold"><%= article.title %></h3>
            </a>
        <% }); %>
    </div>

    <a href="/createarticle" target="_blank" class="fixed right-3 bottom-2 px-3 py-2 bg-gradient-to-r from-red-500 to-red-600">Write your article</a>

    <a href="" class="text-zinc-500 hover:text-white fixed bottom-1">&copy; Fi-4, 2024</a>

    <script>
        const themeToggleBtn = document.getElementById('theme-toggle');
        const body = document.body;

        themeToggleBtn.addEventListener('click', () => {
            if (body.classList.contains('dark-mode')) {
                body.classList.remove('dark-mode');
                body.classList.add('light-mode');
                themeToggleBtn.textContent = '☽';
            } else {
                body.classList.remove('light-mode');
                body.classList.add('dark-mode');
                themeToggleBtn.textContent = '☀';
            }
        });
    </script>
</body>
</html>
